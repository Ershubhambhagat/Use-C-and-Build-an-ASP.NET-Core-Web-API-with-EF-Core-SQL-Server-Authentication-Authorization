@model IEnumerable<NZWalk.UI.Models.DTOs.RegionDto>

<style >.custom-table {
    border: 3px solid green;
    border-collapse: collapse;
}
.custom-table th, .custom-table td {
    padding: 10px;
    text-align: left;
    border: 3px solid green;
}
</style>
<h1 class="mt-5" >Regions</h1>
<div class="d-flex justify-content-end">   

    <a class="btn btn-secondary" asp-controller="Regions" asp-action="AddRegion"> Add Region</a>
</div>
<table class="custom-table">
    <thead>
        <tr>
            <th>Id </th>
            <th>Code</th>
            <th>Name</th>
            <th>ImageUrl</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var walk in Model)
        {
          <tr>
                <td>@walk.Id</td>
                <td>@walk.Name </td>
                <td>@walk.Code </td>
                <td>@walk.RegionImageUrl </td>


          </tr>  
        }

    </tbody>
</table>




